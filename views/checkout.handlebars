<script>
// script.js
document.addEventListener('DOMContentLoaded', function() {
const pizzaSelect = document.getElementById('pizzaSelect');
const deliverySelect = document.getElementById('deliverySelect');
const cardContainer = document.getElementById('cardContainer');

pizzaSelect.addEventListener('click', updateOrder)
deliverySelect.addEventListener('click', updateOrder);

const cardTemplate = Handlebars.compile(document.getElementById('card-template').innerHTML);

function updateOrder() {
const pizzaType = pizzaSelect.value;
const deliveryOption = deliverySelect.value;

const cardData = {
pizzaType: pizzaType,
deliveryOption: deliveryOption
};

const cardHtml = cardTemplate(cardData);

cardContainer.innerHTML = cardHtml;
}

// Call updateOrder initially to display the default values
updateOrder();
});
</script>



<div class="row">
    <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title" id="orderTitle">Your Order</span>
                <p>Pizza: {{pizzaType}}</p>
                <p>Delivery Option: {{deliveryOption}}</p>
            </div>
            <div class="card-action">
                <a href="#">Checkout</a>
                
            </div>
        </div>
    </div>
</div>